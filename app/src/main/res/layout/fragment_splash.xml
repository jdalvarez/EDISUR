<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.SplashFragment"
    android:background="#0c1f42">

    <ImageView
        android:id="@+id/green2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/gray"
        android:layout_width="190dp"
        android:layout_height="10dp"
        android:background="@drawable/rectangle_blue"/>
    <ImageView
        android:id="@+id/gray2"
        app:layout_constraintStart_toEndOf="@id/green"
        app:layout_constraintEnd_toStartOf="@id/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="190dp"
        android:layout_height="10dp"
        android:background="@drawable/rectangle_white"/>
    <ImageView
        android:id="@+id/white2"
        app:layout_constraintStart_toEndOf="@id/gray"
        app:layout_constraintEnd_toStartOf="@id/blue"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="190dp"
        android:layout_height="10dp"
        android:background="@drawable/rectangle_gray"/>
    <ImageView
        android:id="@+id/blue2"
        app:layout_constraintStart_toEndOf="@id/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="190dp"
        android:layout_height="10dp"
        android:background="@drawable/rectangle_green"/>


    <TextView
        android:id="@+id/iniciar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/iniciar_encuesta"
        android:textSize="50sp"
        android:textColor="@drawable/rectangle_white"/>
    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iniciar"
        app:layout_constraintBottom_toTopOf="@id/blue"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/edisur_logo"/>


    <ImageView
        android:id="@+id/green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/gray"
        android:layout_width="190dp"
        android:layout_height="10dp"
        android:background="@drawable/rectangle_green"/>
    <ImageView
        android:id="@+id/gray"
        app:layout_constraintStart_toEndOf="@id/green"
        app:layout_constraintEnd_toStartOf="@id/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="190dp"
        android:layout_height="10dp"
        android:background="@drawable/rectangle_gray"/>
    <ImageView
        android:id="@+id/white"
        app:layout_constraintStart_toEndOf="@id/gray"
        app:layout_constraintEnd_toStartOf="@id/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="190dp"
        android:layout_height="10dp"
        android:background="@drawable/rectangle_white"/>
    <ImageView
        android:id="@+id/blue"
        app:layout_constraintStart_toEndOf="@id/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="190dp"
        android:layout_height="10dp"
        android:background="@drawable/rectangle_blue"/>




</androidx.constraintlayout.widget.ConstraintLayout>