<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3b7655"
    tools:context=".ui.Question6Fragment">

    <ImageView
        android:id="@+id/green2"
        android:layout_width="190dp"
        android:layout_height="10dp"
        android:background="@drawable/rectangle_blue"
        app:layout_constraintEnd_toStartOf="@id/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/gray2"
        android:layout_width="190dp"
        android:layout_height="10dp"
        android:background="@drawable/rectangle_white"
        app:layout_constraintEnd_toStartOf="@id/white"
        app:layout_constraintStart_toEndOf="@id/green"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/white2"
        android:layout_width="190dp"
        android:layout_height="10dp"
        android:background="@drawable/rectangle_gray"
        app:layout_constraintEnd_toStartOf="@id/blue"
        app:layout_constraintStart_toEndOf="@id/gray"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/blue2"
        android:layout_width="190dp"
        android:layout_height="10dp"
        android:background="@drawable/rectangle_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/white"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/te_interesar_a_recibir_novedades_comerciales_sobre_grupo_edisur"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/question_title_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:layout_marginTop="@dimen/answers_margin_top"
        android:id="@+id/Qgroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        app:layout_constraintStart_toStartOf="@id/pregunta"
        app:layout_constraintTop_toBottomOf="@id/pregunta">

        <RadioButton
            android:id="@+id/si_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Si"
            android:textColor="@color/white"
            android:textSize="@dimen/checkbox_text_size"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/no_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:textColor="@color/white"
            android:textSize="@dimen/checkbox_text_size"
            android:textStyle="bold" />
    </RadioGroup>

    <Button
        android:id="@+id/finalizar"
        android:layout_width="@dimen/button_next_width"
        android:layout_height="wrap_content"
        android:backgroundTint="#8893a3"
        android:text="Enviar"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintBottom_toTopOf="@id/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Qgroup" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edisur_png"
        app:layout_constraintBottom_toTopOf="@id/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:id="@+id/green"
        android:layout_width="190dp"
        android:layout_height="10dp"
        android:background="@drawable/rectangle_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/gray"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/gray"
        android:layout_width="190dp"
        android:layout_height="10dp"
        android:background="@drawable/rectangle_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/white"
        app:layout_constraintStart_toEndOf="@id/green" />

    <ImageView
        android:id="@+id/white"
        android:layout_width="190dp"
        android:layout_height="10dp"
        android:background="@drawable/rectangle_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/blue"
        app:layout_constraintStart_toEndOf="@id/gray" />

    <ImageView
        android:id="@+id/blue"
        android:layout_width="190dp"
        android:layout_height="10dp"
        android:background="@drawable/rectangle_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/white" />

</androidx.constraintlayout.widget.ConstraintLayout>